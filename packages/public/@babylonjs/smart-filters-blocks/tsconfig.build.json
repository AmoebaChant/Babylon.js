{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "../../../dev/smartFilterBlocks/src",
        "declaration": true,
        "target": "ES2020",
        "importHelpers": true,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters-blocks",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters-blocks",
                "appendJS": true
            }
        ],
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "smart-filters": ["dev/smartFilters/dist"]
        }
    },

    "include": ["../../../dev/smartFilterBlocks/src/**/*"]
}
