{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "target": "ES2020",
        "importHelpers": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": false,
        "paths": {
            "@babylonjs/core/*": ["../node_modules/core/*"]
        }
    },

    "include": ["./src/**/*"]
}
