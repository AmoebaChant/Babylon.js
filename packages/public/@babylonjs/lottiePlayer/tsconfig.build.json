{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../dev/lottiePlayer/src",
        "declaration": true,
        "target": "ES2020",
        "importHelpers": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": false,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/lottie-player",
                "appendJS": true,
                "translationOverrides": {
                    "core": "/lib/@babylonjs/core"
                }
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/lottie-player",
                "appendJS": true,
                "translationOverrides": {
                    "core": "/lib/@babylonjs/core"
                }
            }
        ],
        "paths": {
            "core/*": ["public/@babylonjs/lottiePlayer/lib/@babylonjs/core/*"]
        }
    },

    "include": ["../../../dev/lottiePlayer/src/**/*"]
}
