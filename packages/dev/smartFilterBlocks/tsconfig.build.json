{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "core/*": ["../node_modules/core-for-sf/*"],
            "@babylonjs/core/*": ["../node_modules/core-for-sf/*"],
            "@babylonjs/smart-filters": ["dev/smartFilters/dist"]
        }
    },

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/dist"]
}
