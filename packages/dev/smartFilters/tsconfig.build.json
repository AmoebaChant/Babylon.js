{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "core/*": ["node_modules/core-for-sf/*"],
            "shared-ui-components-for-sf/*": ["/node_modules/shared-ui-components-for-sf/*"]
        }
    },

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/dist"]
}
