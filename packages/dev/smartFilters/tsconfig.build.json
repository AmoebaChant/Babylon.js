{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters",
                "appendJS": true
            }
        ]
    },

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/dist"]
}
