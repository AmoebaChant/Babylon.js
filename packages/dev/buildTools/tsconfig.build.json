{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },

    "include": ["./src/**/*"]
}
