{
    "extends": "../../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../core/src",
        "declaration": true,
        "target": "ES2020",
        "importHelpers": true,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/core",
                "appendJS": true,
                "translationOverrides": {
                    "core": "core-for-lottie-player"
                }
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/core",
                "appendJS": true,
                "translationOverrides": {
                    "core": "core-for-lottie-player"
                }
            }
        ],
        "paths": {
            "core/*": ["dev/core/src/*"]
        }
    },

    "include": ["../../../core/src/**/*"]
}
