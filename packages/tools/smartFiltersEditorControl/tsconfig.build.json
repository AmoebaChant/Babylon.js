{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "shared-ui-components/*": ["dev/sharedUiComponents/dist/*"],
            "smart-filters": ["dev/smartFilters/dist"],
            "smart-filters-blocks": ["dev/smartFilterBlocks/dist"]
        }
    },

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/dist"]
}
