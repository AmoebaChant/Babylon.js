{
    "extends": "../../../tsconfig.json",

    "compilerOptions": {
        "resolveJsonModule": true,
        "paths": {
            "core/*": ["dev/core/src/*"],
            "shared-ui-components/*": ["dev/sharedUiComponents/src/*"],
            "smart-filters": ["dev/smartFilters/src"],
            "smart-filters-blocks": ["dev/smartFilterBlocks/src"],
            "smart-filters-blocks/*": ["dev/smartFilterBlocks/src/*"],
            "smart-filters-editor-control": ["tools/smartFiltersEditorControl/src"]
        }
    },

    "include": ["./src/**/*.ts", "./src/configuration/smartFilters/serialized/*.json"],
    "exclude": ["**/node_modules", "**/.temp"]
}
